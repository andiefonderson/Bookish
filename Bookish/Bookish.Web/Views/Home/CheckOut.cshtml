@model List<Bookish.DataAccess.BookCopy>
<h1>@ViewData["Title"]</h1>


<div>
    <h1 class="gpTitle">Thanks! Enjoy your book!</h1>
    <table>
        <thead>
            <tr>
                <th>Copy ID</th>
                <th>Available?</th>
                <th>Borrower ID</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CopyID</td>
                    <td>@item.Available</td>
                    <td>@item.BorrowerID</td>
                    <td>@item.DueDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>