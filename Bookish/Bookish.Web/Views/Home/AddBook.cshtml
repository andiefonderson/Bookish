@model NewBookModel
@{
    ViewData["Title"] = "Add a New Book";
    if (ViewBag.Error == "error")
    {
        <div class="alert alert-danger" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            <strong>Failure</strong> There was an error with adding in the new book. Please review the fields and try again.
        </div>
    }
}

<div class="text-center">
    <h1 class="display-4">Add a New Book to the Library</h1>
    @using (Html.BeginForm("AddBook", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <p class="control-label">Title</p>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", required="required" } })
        </div>
        <div class="form-group">
            <p class="control-label">Genre</p>
            @Html.EditorFor(model => model.Genre, new { htmlAttributes = new { @class = "form-control", required="required" } })
        </div>
        <div class="form-group">
            <p class="control-label">Number of Copies Available</p>
            @Html.EditorFor(model => model.NumberOfCopies, new { htmlAttributes = new { @class = "form-control", required="required" } })
        </div>
        <div class="form-group">
            <p class="control-label">ISBN</p>
            @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control", required="required" } })
        </div>
        <div class="form-group">
            <p class="control-label">Author Name</p>
            @Html.DropDownListFor(model => model.AuthorID, Model.AuthorNameList, "Please select: ")
            @*@Html.DropDownList("AuthorList", null, new { htmlAttributes = new { @class = "form-control", required="required" }})*@
        </div>

        <input type="submit" value="Submit New Book" />
    }
</div>
